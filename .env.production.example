# CRM/ERP Production Environment Variables
# Copy this file to .env and fill in the values

# Database
DB_NAME=crm_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Django
SECRET_KEY=your_django_secret_key_here
DEBUG=False
DJANGO_ALLOWED_HOSTS=hubcenter.nextmedya.com,localhost
CORS_ALLOWED_ORIGINS=https://hubcenter.nextmedya.com

# Security
VAULT_ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Frontend
NEXT_PUBLIC_API_URL=https://hubcenter.nextmedya.com/api/v1

# Redis (internal)
REDIS_URL=redis://redis:6379/0
